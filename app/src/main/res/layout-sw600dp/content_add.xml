<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddActivity"
    tools:showIn="@layout/activity_add"
    android:padding="20dp"
    android:background="@color/colorPrimary">

    <EditText
        android:id="@+id/etAddName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:hint="@string/name_eg_stratocaster"
        android:textColorHint="@color/colorText"
        android:inputType="textCapSentences"
        android:maxLength="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rgType"
        android:importantForAutofill="no"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tvAddName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="30sp"
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:onClick="editName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rgType"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/etAddName"
        app:layout_constraintBottom_toTopOf="@id/rgUse">
        <TextView
            android:id="@+id/tvTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/what_type_of_guitar_is_this"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rbAddElectric"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbAddElectric"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:onClick="electricClicked"
            android:contentDescription="@string/electric_guitar_icon"
            app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
            app:layout_constraintEnd_toStartOf="@id/rbAddAcoustic"
            app:layout_constraintStart_toStartOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAddElectric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/electric_background"/>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Electric"-->
                <!--android:textStyle="bold"-->
                <!--android:shadowColor="#000000"-->
                <!--android:shadowDx="1"-->
                <!--android:shadowDy="1"-->
                <!--android:shadowRadius="2"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbAddAcoustic"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:onClick="acousticClicked"
            android:contentDescription="@string/acoustic_guitar_icon"
            app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
            app:layout_constraintEnd_toStartOf="@id/rbAddBass"
            app:layout_constraintStart_toEndOf="@id/rbAddElectric">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAddAcoustic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/acoustic_background"/>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Acoustic"-->
                <!--android:textStyle="bold"-->
                <!--android:shadowColor="#000000"-->
                <!--android:shadowDx="1"-->
                <!--android:shadowDy="1"-->
                <!--android:shadowRadius="2"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbAddBass"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:onClick="bassClicked"
            android:contentDescription="@string/bass_guitar_icon"
            app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rbAddAcoustic">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAddBass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bass_background"/>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Bass"-->
                <!--android:textStyle="bold"-->
                <!--android:shadowColor="#000000"-->
                <!--android:shadowDx="1"-->
                <!--android:shadowDy="1"-->
                <!--android:shadowRadius="2"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rgUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/rgType"
        app:layout_constraintBottom_toTopOf="@id/tvAddDateChanged">
        <TextView
            android:id="@+id/tvUseLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:text="@string/how_often_do_you_play_this_guitar"
            app:layout_constraintTop_toTopOf="parent"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbAddDaily"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:onClick="dailyClicked"
            android:contentDescription="@string/play_daily_icon"
            app:layout_constraintTop_toBottomOf="@id/tvUseLabel"
            app:layout_constraintEnd_toStartOf="@id/rbAddSomeDays"
            app:layout_constraintStart_toStartOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAddDaily"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_daily"/>
            <!--<TextView-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Daily"-->
                <!--android:textStyle="bold"-->
                <!--android:gravity="end"-->
                <!--android:shadowColor="#000000"-->
                <!--android:shadowDx="1"-->
                <!--android:shadowDy="1"-->
                <!--android:shadowRadius="2"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbAddSomeDays"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:onClick="someDaysClicked"
            android:contentDescription="@string/play_a_few_times_a_week"
            app:layout_constraintTop_toBottomOf="@id/tvUseLabel"
            app:layout_constraintStart_toEndOf="@id/rbAddDaily"
            app:layout_constraintEnd_toStartOf="@id/rbAddWeekly">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAddSomeDays"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_somedays"/>
            <!--<TextView-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Regularly"-->
                <!--android:gravity="end"-->
                <!--android:textStyle="bold"-->
                <!--android:shadowColor="#000000"-->
                <!--android:shadowDx="1"-->
                <!--android:shadowDy="1"-->
                <!--android:shadowRadius="2"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbAddWeekly"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:onClick="weeklyClicked"
            android:contentDescription="@string/play_once_per_week_or_less"
            app:layout_constraintTop_toBottomOf="@id/tvUseLabel"
            app:layout_constraintStart_toEndOf="@id/rbAddSomeDays"
            app:layout_constraintEnd_toEndOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAddWeekly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_weekly"/>
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Occasionally"-->
                <!--android:gravity="end"-->
                <!--android:textStyle="bold"-->
                <!--android:shadowColor="#000000"-->
                <!--android:shadowDx="1"-->
                <!--android:shadowDy="1"-->
                <!--android:shadowRadius="2"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tvAddDateChangedLabel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="@string/strings_last_changed"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/rgUse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvAddDateChanged"
        app:layout_constraintBottom_toTopOf="@id/tvAddCoatingLabel"/>

    <TextView
        android:id="@+id/tvAddDateChanged"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="..."
        android:textColorHint="@color/colorText"
        android:gravity="center"
        android:onClick="showCalendarDialog"
        android:background="@drawable/text_view_background"
        app:layout_constraintTop_toBottomOf="@id/rgUse"
        app:layout_constraintStart_toEndOf="@id/tvAddDateChangedLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sAddCoating"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvAddCoatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="@string/this_guitar_has_coated_strings"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvAddDateChanged"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sAddCoating"
        app:layout_constraintBottom_toTopOf="@id/div"/>

    <Switch
        android:id="@+id/sAddCoating"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvAddDateChanged"
        app:layout_constraintStart_toEndOf="@id/tvAddCoatingLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/div"/>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/sAddCoating"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:background="@drawable/custom_button"
        android:text="@string/submit"
        android:textSize="20sp"
        android:onClick="submit"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>