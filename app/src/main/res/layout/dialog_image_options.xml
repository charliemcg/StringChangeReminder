<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="450dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnImageChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRemoveImage"/>

    <Button
        android:id="@+id/btnRemoveImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Image"
        app:layout_constraintTop_toBottomOf="@id/btnImageChoose"
        app:layout_constraintBottom_toTopOf="@id/btnImageBack"/>

    <Button
        android:id="@+id/btnImageBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

</android.support.constraint.ConstraintLayout>