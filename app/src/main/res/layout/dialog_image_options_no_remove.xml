<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="290dp"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Take photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnImageChoose">
        <ImageView
            android:id="@+id/ivOne"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:src="@drawable/ic_photo_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvOne"/>
        <TextView
            android:id="@+id/tvOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Take photo"
            app:layout_constraintStart_toEndOf="@id/ivOne"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btnImageChoose"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Choose image"
        app:layout_constraintTop_toBottomOf="@id/btnTakePhoto"
        app:layout_constraintBottom_toTopOf="@+id/btnImageBack">
        <ImageView
            android:id="@+id/ivTwo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:src="@drawable/ic_photo_library"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTwo"/>
        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Choose image"
            app:layout_constraintStart_toEndOf="@id/ivTwo"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnImageBack"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Close"
        app:layout_constraintTop_toBottomOf="@id/btnImageChoose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>