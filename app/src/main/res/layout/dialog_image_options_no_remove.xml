<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="290dp"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="@string/take_photo"
        android:background="#eeeeee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divOne">
        <ImageView
            android:id="@+id/ivOne"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="30dp"
            android:src="@drawable/ic_photo_camera"
            android:contentDescription="@string/camera_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvOne"/>
        <TextView
            android:id="@+id/tvOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/darkGray"
            android:text="@string/take_photo"
            app:layout_constraintStart_toEndOf="@id/ivOne"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTakePhoto"
        app:layout_constraintBottom_toTopOf="@id/btnImageChoose"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btnImageChoose"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Choose image"
        android:background="#eeeeee"
        app:layout_constraintTop_toBottomOf="@id/divOne"
        app:layout_constraintBottom_toTopOf="@+id/divTwo">
        <ImageView
            android:id="@+id/ivTwo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="30dp"
            android:src="@drawable/ic_photo_library"
            android:contentDescription="@string/image_gallery_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTwo"/>
        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/darkGray"
            android:text="@string/choose_image"
            app:layout_constraintStart_toEndOf="@id/ivTwo"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnImageChoose"
        app:layout_constraintBottom_toTopOf="@id/btnImageBack"/>

    <Button
        android:id="@+id/btnImageBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:text="@string/cancel"
        app:layout_constraintTop_toBottomOf="@id/divTwo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>