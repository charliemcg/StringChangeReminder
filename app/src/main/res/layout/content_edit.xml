<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditActivity"
    tools:showIn="@layout/activity_edit"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/editHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/side_nav_bar"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgEditInstrument"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:onClick="changeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editHeader"
        app:layout_constraintBottom_toBottomOf="@id/editHeader"/>

    <EditText
        android:id="@+id/etUpdateName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:inputType="textCapSentences"
        android:maxLength="20"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="@id/editHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgEditInstrument"/>

    <TextView
        android:id="@+id/tvUpdateName"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:gravity="bottom"
        android:onClick="editName"
        app:layout_constraintBottom_toBottomOf="@id/editHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgEditInstrument"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rgUpdateType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/editHeader"
        app:layout_constraintBottom_toTopOf="@id/rgUpdateUse">
        <TextView
            android:id="@+id/tvTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What type of guitar is this?"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rbUpdateElectric"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbUpdateElectric"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:onClick="electricClicked"
            app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
            app:layout_constraintEnd_toStartOf="@id/rbUpdateAcoustic"
            app:layout_constraintStart_toStartOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUpdateElectric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/electric_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electric"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbUpdateAcoustic"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:onClick="acousticClicked"
            app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
            app:layout_constraintEnd_toStartOf="@id/rbUpdateBass"
            app:layout_constraintStart_toEndOf="@id/rbUpdateElectric">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUpdateAcoustic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/acoustic_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acoustic"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbUpdateBass"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:onClick="bassClicked"
            app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rbUpdateAcoustic">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUpdateBass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bass_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bass"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rgUpdateUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/rgUpdateType"
        app:layout_constraintBottom_toTopOf="@id/tvUpdateDateChanged">
        <TextView
            android:id="@+id/tvUseLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="How often do you play this guitar?"
            app:layout_constraintTop_toTopOf="parent"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbUpdateDaily"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:onClick="dailyClicked"
            app:layout_constraintTop_toBottomOf="@id/tvUseLabel"
            app:layout_constraintEnd_toStartOf="@id/rbUpdateSomeDays"
            app:layout_constraintStart_toStartOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUpdateDaily"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_daily"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textStyle="bold"
                android:gravity="end"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbUpdateSomeDays"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:onClick="someDaysClicked"
            app:layout_constraintTop_toBottomOf="@id/tvUseLabel"
            app:layout_constraintStart_toEndOf="@id/rbUpdateDaily"
            app:layout_constraintEnd_toStartOf="@id/rbUpdateWeekly">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUpdateSomeDays"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_somedays"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Regularly"
                android:gravity="end"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rbUpdateWeekly"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:onClick="weeklyClicked"
            app:layout_constraintTop_toBottomOf="@id/tvUseLabel"
            app:layout_constraintStart_toEndOf="@id/rbUpdateSomeDays"
            app:layout_constraintEnd_toEndOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUpdateWeekly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_weekly"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occasionally"
                android:gravity="end"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tvUpdateDateChangedLabel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Strings Last Changed"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/rgUpdateUse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvUpdateDateChanged"
        app:layout_constraintBottom_toTopOf="@id/tvUpdateCoatingLabel"/>

    <TextView
        android:id="@+id/tvUpdateDateChanged"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@drawable/text_view_background"
        android:onClick="showCalendarDialog"
        app:layout_constraintTop_toBottomOf="@id/rgUpdateUse"
        app:layout_constraintStart_toEndOf="@id/tvUpdateDateChangedLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sUpdateCoating"/>

    <TextView
        android:id="@+id/tvUpdateCoatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:text="This guitar has coated strings"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvUpdateDateChanged"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sUpdateCoating"
        app:layout_constraintBottom_toTopOf="@id/div"/>

    <Switch
        android:id="@+id/sUpdateCoating"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvUpdateDateChanged"
        app:layout_constraintStart_toEndOf="@id/tvUpdateCoatingLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/div"/>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/sUpdateCoating"
        app:layout_constraintBottom_toTopOf="@id/btnUpdate"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/custom_button"
        android:text="Update"
        android:textSize="20sp"
        android:onClick="update"
        app:layout_constraintTop_toBottomOf="@id/sUpdateCoating"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>